.bet-carousel
{
  width: 100%;
    position: relative;
}
.bet-carousel .bc-content-images
{
  width: 100%;
  height: 400px;
  overflow-x: hidden;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.bet-carousel .bc-content-images .bc-carousel-item
{
  transition: 1.5s;
  transform: translateX(0);
  flex-shrink: 0;
  width: 100%;
  text-align: center;
  z-index: 2;
  max-height: 100%;
  display flex
  height: 100%;
}
.bet-carousel .bc-content-images .bc-carousel-item img
{
  width: 100%;
}
.bet-carousel .bc-content-images .bc-carousel-item .bc-text-content
{
  background: rgba(0, 0, 0, .4);
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 1em;
    width: 100%;
    color: #FFF;
    font-weight: bold;
    text-align: left;
}
.bet-carousel .controls
{
  position: absolute;
  width: 100%;
  font-size: 2em;
  left: 0;
  top: 0;
  height: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: .5em;
}
.bet-carousel .controls .control
{
  cursor: pointer;
  width: fit-content;
  color:#f6f11d;
  z-index: 2;
}
.bet-carousel .controls .control.right
{
  margin-left:auto;
}
.bet-carousel
  .fakeImage
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position-x: center
    background-position-y: center
    background-color: #FFF
.playButton
    position: absolute;
    width: auto;
    max-height: 100%;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    max-width 100px
    cursor: pointer;
.playButton:hover
  opacity: .8;
.videoContent
  width: 100%
  background: #000
  .bc-video
    margin 0 auto

.video-iframe
  width: 100%;
  height: 100%;
  min-height: 250px;
.imagePrev
  max-width: 570px;
  margin: 0 auto;