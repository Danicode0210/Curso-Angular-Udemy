#bg {
    top: 0;
    left: -50%;
    width: 200%;
    height: 200%;
    position: fixed;
}

#bg img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0 auto;
    min-width: 50%;
    min-height: 50%;
}

.cl_content
    background-image: url(../../../assets/images/page_bg_demo.jpg);
    background-repeat: no-repeat;
    background-size: 200% 200%;
    // padding: 1em;
.text-clear
    color:#626262
.margingame
    margin-top: 3em;
.gameContentCasino
    width: 100%;
    // max-width: 1024px;
    height: auto;
    margin: 0 auto;
    background-color: rgba(41,43,52,0.9);
    -webkit-box-shadow: 0px 1px 30px 0px rgba(0, 0, 0, 0.65);
