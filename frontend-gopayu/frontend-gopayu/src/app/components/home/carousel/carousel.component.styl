.bet-carousel
    width: 100%;
    position: relative;
    display:flex;
    overflow: hidden;
    border-radius: 5px 5px 0 0;
    .points_content
        z-index: 1;
        text-align: center;
        position: absolute;
        bottom:0;
        left:0;
        width: 100%;
        padding: 2em;
        // -webkit-box-shadow: inset 0px -29px 32px -20px rgba(0,0,0,0.75);
        // -moz-box-shadow: inset 0px -29px 32px -20px rgba(0,0,0,0.75);
        // box-shadow: inset 0px -29px 32px -20px rgba(0,0,0,0.75);
        .point
            height: 10px;
            width: 10px;
            background: #FFF;
            opacity: .8;
            border-radius: 100%;
            display:inline-block;
            margin: .5em;
            vertical-align: middle;
            cursor: pointer;
            transition: .2s;
        .point.active
            background:#ac493c;
        .point.active,
        .point:hover
            height: 15px;
            width: 15px;
    .bet-carousel-control
        z-index: 2;
        position: absolute;
        height: 100%;
        color: #FFF;
        font-size: 3em;
        padding: .5em;
        display: flex;
        align-items: center;
        // -webkit-box-shadow: inset 50px 14px 32px -20px rgba(0,0,0,0.75);
        // -moz-box-shadow: inset 50px 14px 32px -20px rgba(0,0,0,0.75);
        // box-shadow: inset 50px 14px 32px -20px rgba(0,0,0,0.75);
        i
            cursor: pointer;
            opacity: .8;
        i:hover
            opacity: 1;
    .bet-carousel-item
        flex-shrink: 0;
        width: 100%;
        transition: .5s;
        position: relative;
        .hover-image
            background: rgba(1, 57, 97, .3);
            opacity:0;
            width: 100%; 
            height: 100%;
            position: absolute;
            left:0; 
            top:0; 
            transition: .2s;
            cursor: pointer;
            display:flex;
            align-items: center;
            justify-content: center;
            button
                padding: 1em 2em;
        .hover-image:hover
            opacity: 1;
        img
            width: 100%;
            height: 100%;
    .bet-carousel-control.right
        right:0;
        // -webkit-box-shadow: inset -50px 14px 32px -20px rgba(0,0,0,0.75);
        // -moz-box-shadow: inset -50px 14px 32px -20px rgba(0,0,0,0.75);
        // box-shadow: inset -50px 14px 32px -20px rgba(0,0,0,0.75);   
    .bet-carousel-control:hover
        opacity: 1;
