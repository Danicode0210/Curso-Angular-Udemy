.promo-carousel-content
    position: relative;
    padding: 0 4em;
    .bet-carousel-control    
        z-index: 2;
        position: absolute;
        height: 100%;
        color: #fff;
        font-size: 3em;
        padding: 0.5em;
        display: flex;
        align-items: center;
        left:0em;
        i 
            cursor: pointer;
    .bet-carousel-control.right  
        right: 0em;
        left:unset;
    .promo-carousel
        display: flex;
        flex-shrink: 0;
        overflow: hidden;
        position: relative;
        .promo-carousel-item
            flex-shrink: 0;
            width: 100%;
            transition: .5s;
            .promo-carousel-item-promotion:hover
                .bk-show-more
                    opacity:1;
            .promo-carousel-item-promotion::after
                content: " ";
                width: 100%;
            .promo-carousel-item-promotion
                min-width: 290px;
                height: 250px;
                background-repeat: no-repeat;
                background-size: cover;
                background-position: center;
                border-radius: 10px;
                .bk-show-more
                    background: rgba(1,57,97,0.3);
                    opacity: 0;
                    width: 100%;
                    height: 100%;
                    position: absolute;
                    left: 0;
                    top: 0;
                    transition: 0.2s;
                    cursor: pointer;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    button
                        padding: 1em 2em;

@media (max-width: 600px) 
    .promo-carousel-content
        padding: 0 3em;
    .promo-carousel-item
        width: auto !important;
    .bet-carousel-control    
        left:-35px !important;
    .bet-carousel-control.right  
        right: -35px !important;
        left: unset !important;